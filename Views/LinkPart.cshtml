@using Etch.OrchardCore.Widgets.Models;
@using Etch.OrchardCore.Widgets.ViewModels;

@model LinkPartViewModel

@{
    var tag = new TagBuilder("a");

    var htmlAttributes = Model.LinkPart.ContentItem.As<HtmlAttributesPart>();

    if (htmlAttributes != null)
    {
        htmlAttributes.ApplyToTagBuilder(tag);
    }

    tag.Attributes.Add("href", Model.Url);
    tag.InnerHtml.Append(Model.Text);
}

@tag