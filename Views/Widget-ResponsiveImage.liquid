{% assign linkTo = Model.ContentItem.Content.ResponsiveImage.LinkTo.Text %}
{% assign image = Model.Content.ResponsiveImage-Image %}

{% if linkTo != nil %}
    <a class="image image--link image--responsive {{ Model.ContentItem | animation_css }}" href="{{ linkTo }}" style="{{ Model.ContentItem | animation_styles }}" {{ Model.ContentItem | animation_data_attributes }}>
        {{ image | shape_render }}
    </a>
{% else %}
    <span class="image image--responsive {{ Model.ContentItem | animation_css }}" style="{{ Model.ContentItem | animation_styles }}" {{ Model.ContentItem | animation_data_attributes }}>
        {{ image | shape_render }}
    </span>
{% endif %}
