@using Etch.OrchardCore.Widgets.Models;
@using Etch.OrchardCore.Widgets.ViewModels;

@model ParagraphPartViewModel

@{
    var tag = new TagBuilder("p");

    var htmlAttributes = Model.ParagraphPart.ContentItem.As<HtmlAttributesPart>();

    if (htmlAttributes != null)
    {
        htmlAttributes.ApplyToTagBuilder(tag);
    }
}

@tag.RenderStartTag()
    @Html.Raw(Model.Text)
@tag.RenderEndTag()