@using OrchardCore.ContentManagement;
@using Etch.OrchardCore.Widgets.Models;

@{
    var tag = new TagBuilder("div");
    tag.AddCssClass("media");

    ContentItem contentItem = Model.ContentItem;

    var htmlAttributesPart = contentItem.As<HtmlAttributesPart>();

    if (htmlAttributesPart != null)
    {
        htmlAttributesPart.ApplyToTagBuilder(tag);
    }
}

@tag.RenderStartTag()
    @await DisplayAsync(Model.Content)
@tag.RenderEndTag()