{% if Model.HasMedia %}
    {% for item in Model.Media %}
        <picture class="hero__media">
            {% for source in item.Sources %}
                <source srcset="{{ source.Url }}" media="(min-width: {{ source.Breakpoint }}px)" />
            {% endfor %}

            <img src="{{ item.SmallestImageUrl }}" alt="{{ item.MediaText }}" />
        </picture>
    {% endfor %}
{% endif %}